{# home.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
    {{title}}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/destination.css') }}">
{% endblock %}

{% block main %}
    <main>
        <div id="banner" style="background-image: url('{{ asset('images/' ~ destination.image) }}')">
            <h1>{{destination.name}}</h1>
        </div>
        {% for paragraph in destination.description %}
            <p>{{ paragraph }}</p>
        {% endfor %}

        <iframe src="{{destination.mapEmbed}}" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </main>
{% endblock %}